<%= render "layouts/header" %>
<div class="container">
    <div class="row">
        <div class="col mx-auto">
          <h2 class="text-center">Log In</h2><br></br>
          
          <%= form_with model: @user, url: user_session_path do |f| %>
          
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Account Name</label>
              <div class="col-sm-10">
                <%= f.text_field :account_name, autofocus: true, placeholder: "Account Name", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Email</label>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, placeholder: "example@example.com", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Password</label>
              <div class="col-sm-10">
                <%= f.password_field :password, placeholder: "current-password", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"></label>
              <div class="col-sm-10">
                <%= f.submit "Log In", class: "btn btn-info form-control" %>
              </div>
            </div>
          <% end %>
          
          <br></br>
          <h2 class="text-center">Those who have not completed membership registration</h2>
          </br>
          <p class="text-center">Please register as a member from <%= link_to "here", new_user_registration_path %></p>
        </div>
    </div>
</div>
