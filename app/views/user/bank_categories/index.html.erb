<%= render "layouts/header" %>
<div class="container">
    <div class="row">
        <div class="col mx-auto">
            <h2 class="text-center">Add New Bank category</h2>
            </br>
            <%= form_with model: @category, url: users_bank_categories_path do |f| %>
            
                <div class="row">
                  <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Category Name</label>
                  <div class="col-sm-10">
                    <%= f.text_field :name, autofocus: true, placeholder: "category name", class: "form-control" %>
                  </div>
                </div>
            
                <div class="row">
                  <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"></label>
                  <div class="col">
                    <%= f.submit "Add Category", class: "btn btn-warning form-control" %>
                  </div>
                </div>
            <% end %>
            <br></br>
            <h2 class="text-center">Bank Log Categories</h2>
            
            <table class="table">
                <thead>
                    <tr>
                      <th>Category Name</th>
                      <th colspan="2"></th>
                    </tr>
                </thead>
                <tbody>
                    <% @categories.each do |c| %>
                        <tr>
                            <th><%= c.name %></th>
                            <th><%= link_to "Edit", edit_users_bank_categories_path(c), class: "btn btn-warning" %></th>
                            <th><%= link_to "Destroy", destroy_users_bank_categories_path(c), method: :delete, class: "btn btn-info", "data-confirm" => "Do you really want to delete this?" %></th>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
