<%= render "layouts/header" %>
<div class="container">
    <div class="row">
        <div class="col mx-auto">
            <h2 class="text-center">Edit New Bank category</h2>
            </br>
            <%= form_with model: @category, url: update_users_bank_categories_path, method: :patch do |f| %>
            
                <div class="row">
                  <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Category Name</label>
                  <div class="col-sm-10">
                    <%= f.text_field :name, autofocus: true, placeholder: "category name", class: "form-control" %>
                  </div>
                </div>
            
                <div class="row">
                  <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"></label>
                  <div class="col">
                    <%= f.submit "Edit Category", class: "btn btn-warning form-control" %>
                  </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
