<%= render "layouts/header" %>
<div class="container">
    <div class="row">
        <div class="col mx-auto">
          <h2 class="text-center">Edit <%= resource_name.to_s.humanize %> Password</h2><br></br>
          <%= link_to "Back", users_mypage_path, class: "btn btn-info" %>
          <br></br>
          
          <%= form_with model: @user, url: user_registration_path, method: :patch do |f| %>
            <%= render "user/shared/error_messages", resource: resource %>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Email</label>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Current Password</label>
              <div class="col-sm-10">
                <%= f.password_field :current_password, autofocus: true, placeholder: "current password", class: "form-control" %>
              </div>
            </div>
            
            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">New Password</label>
              <div class="col-sm-10">
                <%= f.password_field :password, autofocus: true, placeholder: "new password(6 characters minimum)", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Password Confirm</label>
              <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autofocus: true, placeholder: "new password confirm", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"></label>
              <div class="col">
                <%= f.submit "Update Password", class: "btn btn-warning form-control" %>
              </div>
            </div>
          <% end %>
        </div>
    </div>
</div>


