<%= render "layouts/header" %>
<div class="container">
    <div class="row">
        <div class="col mx-auto">
            
            <h2 class="text-center">Edit Account</h2><br></br>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <%= link_to "Edit Password", edit_user_registration_path, class: "btn btn-info" %>
            </div>
            </br>
            
            <%= form_with model: @user, url: users_update_path, method: :patch do |f| %>
            
            <%= render "layouts/error", obj: @user %>
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Name</label>
              <div class="col-5">
                <%= f.text_field :last_name, autofocus: true, placeholder: "Last Name", class: "form-control" %>
              </div>
              <div class="col-5">
                <%= f.text_field :first_name, autofocus: true, placeholder: "First name", class: "form-control" %>
              </div>
            </div>
            
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Account Name</label>
              <div class="col-sm-10">
                <%= f.text_field :account_name, autofocus: true, placeholder: "Account Name", class: "form-control" %>
              </div>
            </div>
          
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg text-center">Email</label>
              <div class="col-sm-10">
                <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", class: "form-control" %>
              </div>
            </div>
          
            <div class="row">
              <label for="colFormLabelLg" class="col-sm-2 col-form-label col-form-label-lg"></label>
              <div class="col">
                <%= f.submit "Edit Account", class: "btn btn-warning form-control" %>
              </div>
            </div>
            
          <% end %>
        </div>
    </div>
</div>